@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


<table id="movies" class="table table-bordered table-hover">
    <thread>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            
        </tr>
    </thread>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });

            
        });
    </script>

}